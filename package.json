{
  "name": "rule-of-thumb",
  "version": "1.0.0",
  "description": "Zemoga Front end dev challenge",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "lint": "next lint",
    "build": "next build",
    "start": "next start",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cargonzalv/rule-of-thumb.git"
  },
  "keywords": [
    "zemoga",
    "challenge",
    "web",
    "dev",
    "frontend",
    "react",
    "redux",
    "nextjs"
  ],
  "author": "Carlos Gonzalez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cargonzalv/rule-of-thumb/issues"
  },
  "homepage": "https://github.com/cargonzalv/rule-of-thumb#readme",
  "dependencies": {
    "@material-ui/icons": "^4.11.2",
    "javascript-time-ago": "^2.3.7",
    "next": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.20.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.4",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.21",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.5.0",
    "babel-jest": "^26.1.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.30.0",
    "eslint-config-next": "^11.0.1",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "ts-jest": "^26.5.4",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./.next/",
      "./node_modules/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  }
}
